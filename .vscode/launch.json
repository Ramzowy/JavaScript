    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js"
        },

        {    
              "name": "Babel Node", 
               "type": "node",   
               "request": "launch",  
              "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",  
             "runtimeArgs": [ "--presets", "@babel/env"  ],  
             "program": "${file}",  
              "env": {    "BABEL_ENV": "debug"}
      }
    ]
}